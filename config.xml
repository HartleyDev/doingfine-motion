<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ionicframework.starter" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Doing Fine</name>
    <description>
        Make Sure Your Loved One is OK.
    </description>
    <author email="nelsonriley@gmail.com" href="http://doingfine.azurewebsites.net/">
      Nelson Riley
    </author>
    <content src="index.html" />
    <icon src="www/img/icons/icon@2x.png" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <feature name="StatusBar">
      <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <feature name="LocalNotification">
        <param name="ios-package" value="APPLocalNotification" />
    </feature>
    <feature name="PedometerCordova">
        <param name="ios-package" value="PedometerCordova" />
    </feature>
</widget>
